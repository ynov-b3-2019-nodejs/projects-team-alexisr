<!DOCTYPE html>
<html>
  <head>
    <% include partials/head %>
  </head>
  <body>
    <header>
        <% include partials/header %>
    </header>
    <div class="container">
        <div class="row">
            <div class="control-group" id="fields">
                <label class="control-label" for="fields"></label>
                <div class="controls" >
                    <form role="form" autocomplete="off" method="post" action="/conversations">
                        <div class="entry input-group col-xs-3">
                            <input class="form-control" name="fields[]" type="text" placeholder="Enter a name" />
                            <span class="input-group-btn">
                                <button class="btn btn-success btn-add" type="button">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </span>
                        </div>
                        <select class="form-control" id="fields" name="fields">
                            <% utilisateurs.forEach(function(element) { %>
                                <option value=<%= element.id %>><%= element.first_name %> <%= element.last_name %></option>
                            <% }); %>
                        </select>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Create conversation</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <% include partials/footer %>
    </footer>
  </body>
</html>